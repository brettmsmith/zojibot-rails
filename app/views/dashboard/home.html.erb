<head>
    <title>Dashboard | Zojibot</title>
</head>
<div class="container-fluid">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active" id="statustab"><a href="#">Status</a></li>
      <li role="presentation" id="commandtab"><a href="#">Commands</a></li>
      <li role="presentation" id="settingstab"><a href="#">Settings</a></li>
    </ul>
</div>
<div class="container-fluid" id="status">
    <div class="row">
        <div class="col-md-4">
            <button id="botbutton" onclick="toggleBot()" class="btn btn-default">Start bot</button><%#use #id.html jquery to change button text%>
        </div>
    </div>
</div>

<div class="container-fluid" id="commands">
    <div class="row"><!--TODO: If no commands, have none-->
        <table class="table table-striped">
            <tr>
                <th>Command</th>
                <th>Response</th>
                <th>User level</th>
                <th></th>
            </tr>

            <%(1..10).each do |i|%>
                <tr id="row<%=i%>">
                    <td id="call<%=i%>">call</td>
                    <td id="res<%=i%>">res</td>
                    <td id="userlevel<%=i%>">userlevel</td>
                    <td id="edit<%=i%>"><button onclick="showRow(<%=i%>)" id="editbtn<%=i%>" class="btn btn-primary">Edit</button></td>
                    <td id="delete<%=i%>"><button onclick="deleteRow(<%=i%>)" id="deletebtn<%=i%>" class="btn btn-primary noshow">Delete</button></td>
                </tr>
                <tr id="editform<%=i%>" style="display: none;">
                    <!--<form>-->
                        <td><input type="text" id="editcall<%=i%>" class="form-control"/></td>
                        <td><input type="text" id="editres<%=i%>" class="form-control"/></td>
                        <td><label>Mod only?<input type="checkbox" id="edituserlevel<%=i%>" class="form-control"></input></label></td>
                        <td><button onclick="editCommand(<%=i%>)" class="btn btn-primary">Save</button></td>
                    <!--</form>-->
                </tr>
            <%end%>
            <tr>
                <form id="commandform">
                    <td><input type="text" id="addcall" class="form-control" placeholder="Command"></td>
                    <td><input type="text" id="addresponse" class="form-control" placeholder="Response"></td>
                    <td><label>Mod only?<input type="checkbox" id="addmodonly" class="form-control"></input></label></td>
                </tr>

        </table>
                    <button type="submit" class="btn btn-default">Add command</button>
                </form>
    </div>
    <div class="row" id="paging">
    </div>
</div>

<div class="container-fluid" id="settings">
    <div class="row">
        <h1>Settings</h1>
    </div>
</div>
<%puts "user token: #{session[:usertoken]}"%>
<%= javascript_tag do %>
  window.usertoken = '<%= j session[:usertoken] %>';
  window.username = '<%= j session[:name]%>';
<% end %>
<script type="text/javascript">
    load();
</script>
<script type="text/javascript">
    $("#home").addClass("active");
    //$("#about").removeClass("active");
    //$("#progress").removeClass("active");
</script>
